{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    /* ğŸŒ Module & Target - Crucial for ESM + Prisma */
    "module": "NodeNext",               // âœ… required for ESM + ts-node
    "target": "ES2020",                 // âœ… avoids #private field errors
    "moduleResolution": "NodeNext",     // âœ… must match module type
    "esModuleInterop": true,            // âœ… fixes bcrypt default import

    /* ğŸŒ Environment Settings */
    "lib": ["ES2020"],                  // âœ… includes modern features
    "types": ["node"],                  // âœ… ensures Node globals are available

    /* ğŸ“œ Output Options */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* âœ… Type Safety */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types" 
    ],

    /* ğŸ’¡ Style / Quality Options (Optional but Recommended) */
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,

    /* ğŸ— Build System Support */
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["prisma/**/*.ts", "src/**/*.ts","env.d.ts", "src"]
}
